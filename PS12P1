class Employee:
    def __init__(self, name, salary):
        self.name = name
        self.salary = salary
    
    def calculate_bonus(self, bonus_rate):
        bonus = self.salary * bonus_rate
        return bonus

# Example 
name = "John Doe"
salary = 5000

employee = Employee(name, salary)
bonus_rate = 0.1
bonus = employee.calculate_bonus(bonus_rate)

print(f"{employee.name}'s bonus is: {bonus}")
